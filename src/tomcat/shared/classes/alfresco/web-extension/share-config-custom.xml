<alfresco-config>
   <!-- Disable the CSRF Token Filter -->
   <config evaluator="string-compare" condition="CSRFPolicy" replace="true">
      <filter>
         <rule>
            <request>
               <method>POST</method>
               <path>/page/trusted/call/1|/page/trusted/call/2</path>
            </request>
            <action name="assertReferer">
               <param name="always">false</param>
               <param name="referer">http://172.17.62.29/.*</param>
            </action>
            <action name="assertOrigin">
               <param name="always">false</param>
               <param name="origin">http://172.17.62.29</param>
            </action>
         </rule>
      </filter>
   </config>
</alfresco-config>